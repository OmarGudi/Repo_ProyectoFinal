Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/focal64"
  config.vm.hostname = "pg-vm"
  config.vm.network "private_network", ip: "192.168.56.10"
  config.vm.provider "virtualbox" do |vb|
    vb.memory = "2048"
    vb.cpus = 1
  end

  config.vm.provision "shell", inline: <<-SHELL
    apt-get update
    DEBIAN_FRONTEND=noninteractive apt-get install -y postgresql postgresql-contrib
    sudo -u postgres psql -c "CREATE USER myuser WITH PASSWORD 'mypassword';"
    sudo -u postgres psql -c "CREATE DATABASE mydb OWNER myuser;"
    sudo -u postgres psql -d mydb -c "CREATE TABLE IF NOT EXISTS items (id serial primary key, name text);"
    sudo -u postgres psql -d mydb -c "INSERT INTO items (name) VALUES ('item1'), ('item2') ON CONFLICT DO NOTHING;"
    sed -i "s/#listen_addresses = 'localhost'/listen_addresses = '*'/g" /etc/postgresql/*/main/postgresql.conf
    echo "host    all             all             192.168.56.0/24          md5" >> /etc/postgresql/*/main/pg_hba.conf
    systemctl restart postgresql
  SHELL
end
